@model Student_Details.Models.Student_Details_Sundram

@{
    ViewBag.Title = "StudentAuth";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
       <label class = "control-label col-md-2">Gmail</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Student_MailId, new {@autocomplete="off" })
            <br />
            @Html.ValidationMessageFor(model => model.Student_MailId, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Home", "Index","home")
</div>
