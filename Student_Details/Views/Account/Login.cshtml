@model Student_Details.Models.Login_SignUp_UserDetails

@{
    ViewBag.Title = "Login";
}
<link href="~/Content/Partial.css" rel="stylesheet" />
@if(ViewBag.FPassword != null)
            {
                <p>Your PassWord :- @ViewBag.FPassword</p>
            }
<div id="login">
    <h2>Login</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">UserName</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.User_Name, new { @autocomplete = "off" })
                    <br />
                    @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">PassWord</label>
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.PassWord, new { @autocomplete = "off" })
                    <br />
                    @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-default" />
                    <div>
                        @Html.ActionLink("Click To Register", "Register")
                     </div>
                </div>
            </div>
            <hr />
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
