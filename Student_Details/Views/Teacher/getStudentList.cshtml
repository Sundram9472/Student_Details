@model IEnumerable<Student_Details.Models.Student_Details_Sundram>

@{
    ViewBag.Title = "getStudentList";
    Layout = "~/Views/Shared/_Teacher.cshtml";
}
<link href="~/Content/Partial.css" rel="stylesheet" />
<div id="GetList">
    <p>
        @Html.ActionLink("Add New Student", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
               Roll Number
            </th>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                College 
            </th>
            <th>
               Gmail
            </th>
            <th>
               Programming Language
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student_Roll_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student_FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student_LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student_UniversityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student_MailId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student_Preffered_ProgrammingLanguage)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Student_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Student_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Student_ID })
                </td>
            </tr>
        }

    </table>
</div>