@model Student_Details.Models.Login_SignUp_UserDetails

@{
    ViewBag.Title = "CreateTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           <label class = "control-label col-md-2">FirstName</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.First_Name, new { @autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.First_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">LastName</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Last_Name, new { @autocomplete = "off" })
                <br />
                @Html.ValidationMessageFor(model => model.Last_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Gmail</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Gmail_Id, new { @autocomplete = "off" })
                <br />
                @Html.ValidationMessageFor(model => model.Gmail_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">UserName</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.User_Name, new { @autocomplete = "off" })
                <br />
                @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">PassWord</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PassWord, new { @autocomplete="off" })
                <br />
                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ADD" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "GetTeacherList")
</div>
